import os
import shutil
import re
import tarfile


def fs_vesta_find(path, regex):
    files = []
    dirs = []
    if os.path.isdir(path):
        cur_files = os.listdir(path)
        if isinstance(regex, str):
            regex = re.compile(regex)
        for f in cur_files:
            full_path = os.path.join(path, f)
            if os.path.isdir(full_path):
                dirs.append(full_path)
                sub_files, sub_dis = fs_vesta_find(full_path, regex)
                files.extend(sub_files)
                dirs.extend(sub_dis)
            else:
                if regex.match(f):
                    files.append(full_path)
    return (files, dirs)


def fs_vesta_copy_full_path(src_root, regex, dst_root):
    files, dirs = fs_vesta_find(src_root, regex)
    # if no file was found, return without creating the dst_root dir
    if len(files) == 0:
        return
    
    if not os.path.isdir(dst_root):
        os.makedirs(dst_root)

    # create dir if not exists
    for d in dirs:
        dst_dir = os.path.join(dst_root, d[len(src_root) + 1:])
        if not os.path.isdir(dst_dir):
            os.makedirs(dst_dir)

    for f in files:
        if os.path.isfile(f):
            print("Packing @file: " + f)
            dst_path = os.path.join(dst_root, f[len(src_root) + 1:])
            shutil.copy(f, dst_path)


def fs_vesta_pkg():

    print("Packing now ...")

    pkg_name = '@FS_VESTA_PKG_NAME@'
    pkg_dir = pkg_name
    if os.path.isdir(pkg_dir):
        shutil.rmtree(pkg_dir)
    pkg_path = pkg_name + '.tar.xz'

    # headers
    header_pkg_dir = os.path.join(pkg_dir, 'include', pkg_name)
    fs_vesta_copy_full_path('@FS_VESTA_PKG_HEADER_ROOT_DIR@', r'.*\.h$', \
            header_pkg_dir)

    # libs
    lib_pkg_dir = os.path.join(pkg_dir, 'lib')
    fs_vesta_copy_full_path('@FS_VESTA_PKG_LIB_ROOT_DIR@', \
            r'@FS_VESTA_PKG_LIB_REGEX@', lib_pkg_dir)

    if os.path.isfile(pkg_path):
        os.remove(pkg_path)
    with tarfile.open(pkg_path, 'x:xz') as f:
        f.add(pkg_dir)

    print("End of packing @path: ", os.path.abspath(pkg_path))


if __name__ == "__main__":
    fs_vesta_pkg()
